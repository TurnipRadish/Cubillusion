#[since="1.21.6"]
dispatch mcdoc:custom_data[cubi:event_trigger] to struct {
  "cubi:using_item_stop"?: struct {
    enable?: boolean,
    function?: #[id="function"] string
  },
  "cubi:using_item_start"?: struct {
    enable?: boolean,
    function?: #[id="function"] string
  },
  "cubi:player_hurt_entity"?: struct {
    enable?: boolean,
    function?: #[id="function"] string
  },
  "cubi:player_interacted_with_interaction"?: struct {
    enable?: boolean,
    function?: #[id="function"] string
  }
}

